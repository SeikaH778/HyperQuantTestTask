<Window x:Class="HyperQuantTestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HyperQuantTestTask"
        mc:Ignorable="d"
        Title="HyperQuant Test Application" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#E3F2FD" Padding="15" Margin="5" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть - баланс и валюты -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Label x:Name="BalanceLabael" Content="Ваш баланс:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CurrenciesComboBox" Width="120" Height="28" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="SymbolTextBox" Margin="15" Width="120" Height="28"/>
                </StackPanel>

                <!-- Правая часть - кнопки -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="GetTradesButton" Content="Сделки (REST)" Width="130" Height="35" 
                            Margin="5,0" Click="GetTradesButton_Click" 
                            Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
                    <Button x:Name="GetCandleButton" Content="Свечи (REST)" Width="130" Height="35" 
                            Margin="5,0" Click="GetCandleButton_Click" 
                            Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
                    <Button x:Name="GetTickerButton" Content="Тикер (REST)" Width="130" Height="35" 
                            Margin="5,0" Click="GetTickerButton_Click" 
                            Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
                    <Button x:Name="OpenWebSocketButton" Content="WebSocket" Width="130" Height="35" 
                            Margin="5,0" Click="OpenWebSocketButton_Click" 
                            Background="#FF9800" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- блок сделок / свечей / тикеров -->
                <RowDefinition Height="Auto"/>
                <!-- блок с портфелем -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Сделки -->
                <GroupBox Grid.Column="0" Header="Последние сделки (REST)" FontWeight="SemiBold">
                    <ListView x:Name="TradesListView" Margin="0,0,10,0" AlternationCount="2" Height="250">
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </GroupBox>

                <!-- Разделитель 1 -->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#BDBDBD" Width="2"/>

                <!-- Тикеры -->
                <GroupBox Grid.Column="2" Header="Последние тикеры (REST)" FontWeight="SemiBold">
                    <ListView x:Name="TickersListView" Margin="5,0,5,0" AlternationCount="2" Height="250">
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </GroupBox>

                <!-- Разделитель 2 -->
                <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="#BDBDBD" Width="2"/>

                <!-- Свечи -->
                <GroupBox Grid.Column="4" Header="Последние свечи (REST)" FontWeight="SemiBold">
                    <ListView x:Name="CandleListView" Margin="5,0,5,0" AlternationCount="2" Height="250">
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </GroupBox>
            </Grid>

            <!-- Портфель -->
            <GroupBox Grid.Row="1" Grid.ColumnSpan="5" Header="Баланс портфеля (в разных валютах)" FontWeight="SemiBold" Margin="0,10,0,0">
                <DataGrid x:Name="PortfolioDataGrid"
                          AutoGenerateColumns="True"
                          Height="130"
                          Margin="10,5,10,10"
                          CanUserAddRows="False"
                          IsReadOnly="True"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
